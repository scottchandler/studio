{% extends "base" %}

{% set searchTerm = craft.request.getParam('search') %}
{% set entries = craft.entries.search(searchTerm).find() %}

{% block description %}
{% spaceless %}
Search results for {{ searchTerm }}
{% endspaceless %}
{% endblock %}

{% block title %}
{% spaceless %}

{% endspaceless %}
{% endblock %}

{% block url %}
{% spaceless %}

{% endspaceless %}
{% endblock %}


{% block main %}
<article>
{% if entries %}
<h1>{{ entries | length }} {{ 'item'|pluralize(entries | length) }} containing "{{ searchTerm }}"</h1>

<ul class="archive">
    {% for entry in entries %}
       <li><a href="{{ entry.url }}">{{ entry.title }}</a>
        {% if entry.description !='' %}<p>{{ entry.description }}</p>{% endif %}</li>
    {% endfor %}
    </ul>
 {% else %}
 
 <h1>Nothing found for {{ searchTerm }}, sorry.</h1>   
    
{% endif %}

</article>

{% endblock %}